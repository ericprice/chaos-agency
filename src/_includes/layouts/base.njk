<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    {% if page.url == '/' or not title %}
      {{ site.title }}
    {% else %}
      {{ title }} â€“ {{ site.title }}
    {% endif %}
  </title>
  <meta name="description" content="{{ description or site.description }}">
  <link rel="icon" href="/favicon.png" type="image/png">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  <link rel="stylesheet" href="/styles.css">
  <script defer src="/app.js"></script>
</head>
<body>
  <div class="site-wrapper">
    <header class="site-header">
      <h1 class="site-header-title">{{ site.title }}</h1>
      <h2 class="site-header-subtitle">agency</h2>
    </header>
    <main class="main">
      {{ content | safe }}
    </main>
    <footer class="site-footer">
        <a class="site-footer-email" href="mailto:contact@chaosagency.art">contact@chaosagency.art</a>
    </footer>
  </div>
  <div class="mode-toggle" id="mode-toggle" role="group" aria-label="Shape mode selector">
    <button type="button" class="mode-toggle-btn" data-mode="1" aria-pressed="false" title="Mode 1">1</button>
    <button type="button" class="mode-toggle-btn" data-mode="2" aria-pressed="false" title="Mode 2">2</button>
    <button type="button" class="mode-toggle-btn" data-mode="3" aria-pressed="false" title="Mode 3">3</button>
  </div>
</body>
</html>
