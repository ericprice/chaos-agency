---
layout: layouts/base.njk
title: Home
---
<div id="statements" class="statements">
  {% set randomized = site.statements | shuffle %}
  {% for statement in randomized %}
    <section class="statement">
      {% if statement.length >= 1 %}<p class="line">{{ statement[0] }}</p>{% endif %}
      {% if statement.length >= 2 %}<p class="line">{{ statement[1] }}</p>{% endif %}
      {% if statement.length >= 3 %}<p class="line">{{ statement[2] }}</p>{% endif %}
    </section>
  {% endfor %}
</div>
